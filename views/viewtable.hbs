                <th scope="col">Valid Till</th>
				<th scope="col">Transport</th>
              </tr>
            </thead>
            <tbody>
            {{#each tours}}
              <tr style="background-color: white; color: black;">
                <td>{{this.name}}</td>
                <td>{{this.duration}}</td>
                <td>{{this.date}}</td>
                <td>{{this.dateEnd}}</td>
                <td>{{this.cost}}</td>
                <td>{{this.amount}}</td>
